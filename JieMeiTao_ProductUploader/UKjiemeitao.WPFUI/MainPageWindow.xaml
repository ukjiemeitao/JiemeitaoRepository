<Window x:Class="UKjiemeitao.WPFUI.MainPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainPageWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.Column="0">
            <MenuItem Header="系统设置" FontSize="20" Foreground="Blue" Name="menu_SystemSet" Click="menu_SystemSet_Click_1"></MenuItem>
            <MenuItem Header="产品翻译" FontSize="20" Foreground="Blue" Name="menu_ProductConvert" Click="menu_ProductConvert_Click_1"></MenuItem>
            <MenuItem Header="产品入库" FontSize="20" Foreground="Blue" Name="munu_InDataBase" Click="munu_InDataBase_Click_1"></MenuItem>
            <MenuItem Header="产品上传" FontSize="20" Foreground="Blue" Name="menu_ProductUpload" Click="menu_ProductUpload_Click_1"></MenuItem>
        </Menu>
        <StackPanel Name="spContent" Grid.Row="1" Grid.Column="0"></StackPanel>
    </Grid>
</Window>
